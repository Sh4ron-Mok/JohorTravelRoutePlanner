<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/geyser"
    tools:context=".PlanActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:itemIconTint="@color/pDark"
        app:itemTextColor="@color/pDark"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:elevation="0dp"/>

    <RelativeLayout
        android:id="@+id/rlBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <Button
            android:id="@+id/batupahat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batu Pahat"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:background="@drawable/bg_button"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/johorbahru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Johor Bahru"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorText"
            android:background="@drawable/bg_button"
            android:layout_margin="10dp"
            android:layout_toEndOf="@id/batupahat" />

        <Button
            android:id="@+id/kluang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batupahat"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="Kluang"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/kotatinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/johorbahru"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/kluang"
            android:background="@drawable/bg_button"
            android:text="Kota Tinggi"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/kulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kluang"
            android:layout_marginStart="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="Kulai"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/muar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kotatinggi"
            android:layout_marginStart="85dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/kulai"
            android:background="@drawable/bg_button"
            android:text="Muar"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mersing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kulai"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="Mersing"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/pontian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/muar"
            android:layout_marginStart="58dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/mersing"
            android:background="@drawable/bg_button"
            android:text="Pontian"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

        <Button
            android:id="@+id/segamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mersing"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_button"
            android:text="Segamat"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textColor="@color/colorText" />

        <Button
            android:id="@+id/tangkak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pontian"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@id/segamat"
            android:background="@drawable/bg_button"
            android:text="Tangkak"
            android:textAllCaps="false"
            android:textColor="@color/colorText"
            android:textSize="20sp" />

